<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
        <TextView
            android:id="@+id/fecha_txt"
            android:paddingStart="@android:dimen/app_icon_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023/12/12"
            android:textStyle="bold"
            android:textSize="10dp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginStart="0dp"
            />

    <TextView
        android:id="@+id/distribuidor_txt"
        android:paddingStart="@android:dimen/app_icon_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distribuidor"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_marginStart="0dp"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:id="@+id/id_txt"
            android:text="1200"
            android:gravity="center_vertical|center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/rectangle"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cliente_txt"
                android:layout_width="wrap_content"


                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:text="Nombre del cliente Cliente"

                />

            <TextView
                android:id="@+id/telefono_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="11dp"
                android:textColor="#062BFB"
                android:layout_alignParentRight="true"

                android:layout_marginEnd="8dp"
                android:text="Telefonon" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/direccion_txt"
        android:layout_width="wrap_content"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:layout_marginStart="50dp"
        android:layout_height="wrap_content"
        android:text="Direccion del cliente Cliente"

        />


</LinearLayout>